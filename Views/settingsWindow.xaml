<Window x:Class="Essensausgleich.settingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Essensausgleich"
        mc:Ignorable="d"
        Title="settingsWindow" Height="74" Width="288" MinWidth="350" MinHeight="100"
        >
    <Grid>
        <!--Stackpanel RadioButtons Management choice-->
        <StackPanel
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <RadioButton Content="No File Management" IsEnabled="False"/>
            <RadioButton Content="XML File Management" IsChecked="True" />
            <RadioButton Content="SQL File Management" IsEnabled="False"/>
        </StackPanel>
        <StackPanel
            Margin="0,5,5,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Label Content="FileName" />
            <TextBox Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" Width="130"/>
        </StackPanel>
    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Essensausgleich.Views.ContributionPage"
             Title="ContributionPage"
             xmlns:viewmodel="clr-namespace:Essensausgleich.ViewModel" 
             xmlns:local="clr-namespace:Essensausgleich"
x:DataType="viewmodel:Anwendung">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid Padding="2">
        <CollectionView ItemsSource="{Binding ListOfExpenses}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Expense">
                    <Grid >
                            <Border>
                                <HorizontalStackLayout>
                                    <Label Text="Categorie: "/>
                                    <Label Text="{Binding categorie}" />
                                    <Label Text="  Value: "/>
                                    <Label Text="{Binding valueExpense}" />
                                </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
            </Grid>
    </VerticalStackLayout>
</ContentPage>